class Solution {
    public int search(int[] nums, int target) {
        int n = nums.length;
        int left = 0, right = n - 1;

        while(left <= right){
            int mid = left + (right - left) / 2;

            if (nums[mid] == target) return mid;

            else if (nums[mid] < target) left ++;

            else right --;
        }
        return -1;
    }
}
